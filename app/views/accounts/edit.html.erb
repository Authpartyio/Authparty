<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4">
      <%= form_for :account, url: account_path(@account), method: 'PUT' do |f| %>
      <% if @account.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@account.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @account.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p>
        <%= f.label :public_key %> (address)<br>
        <%= f.text_field :public_key %>
      </p>

      <p>
        <%= f.submit %>
      </p>
      <% end %>
    </div>
  </div>
</div>
